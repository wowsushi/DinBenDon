{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "removeComments": true,
        "esModuleInterop": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "skipLibCheck": true,
        "paths": {
            "components/*": [
                "components/*"
            ]
        }
    }
}